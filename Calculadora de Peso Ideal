#include <stdio.h>
#include <stdlib.h>

int main()
{
    float altura, peso;
    char sexo;

    printf("Informe sua altura: ");
    scanf("%f", &altura);

    printf("Informe seu sexo: ");
    scanf("%s", &sexo);

    //printf("Informe seu peso: ");
   // scanf("%f", &peso);

    if (sexo == 'm') {
        peso=(72.7*altura)-58;
        printf("Seu peso ideal: %f\n", peso);
    }
    else {
        peso=(62.1*altura)-44.7;
        printf("Seu peso ideal: %f\n", peso);
    }

    return 0;
}
